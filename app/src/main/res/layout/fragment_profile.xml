                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Grade 1 - Red"

                                    android:gravity="center"
                                    android:textSize="14sp"
                                    android:textColor="@color/md_black_1000"
                                    android:textStyle="bold"/>
                            </LinearLayout>
