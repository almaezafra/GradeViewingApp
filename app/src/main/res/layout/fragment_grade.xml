<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="gradeviewing.enrollmentsystem.com.gradeviewingapp.Fragments.Grade">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:paddingBottom="10dp"
        android:orientation="vertical"
        android:padding="10dp">
        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            card_view:cardElevation="10dp"
            card_view:cardCornerRadius="4dp">
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="20dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Current Grade"
                    android:textSize="20sp"
                    android:textColor="@color/md_black_1000"
                    android:textStyle="bold"
                    android:layout_marginBottom="20dp"
                    android:gravity="center"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text=""/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:weightSum="10"
                    android:padding="5dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="0dp"
                        android:text="ENGLISH"
                        android:textSize="14sp"
                        android:textColor="@color/md_black_1000"
                        android:layout_height="wrap_content"
                        android:layout_weight="8"/>
                    <TextView
                        android:textSize="14sp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:textColor="@color/md_black_1000"
                        android:text="80.00"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:weightSum="10"
                    android:padding="5dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="0dp"
                        android:text="SCIENCE"
                        android:textSize="14sp"
                        android:textColor="@color/md_black_1000"
                        android:layout_height="wrap_content"
                        android:layout_weight="8"/>
                    <TextView
                        android:textSize="14sp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:textColor="@color/md_black_1000"
                        android:text="80.00"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:weightSum="10"
                    android:padding="5dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="0dp"
                        android:text="ARALING PANLIPUNAN"
                        android:textSize="14sp"
                        android:textColor="@color/md_black_1000"
                        android:layout_height="wrap_content"
                        android:layout_weight="8"/>
                    <TextView
                        android:textSize="14sp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:textColor="@color/md_black_1000"
                        android:text="80.00"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:weightSum="10"
                    android:padding="5dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="0dp"
                        android:text="FILIPINO"
                        android:textSize="14sp"
                        android:textColor="@color/md_black_1000"
                        android:layout_height="wrap_content"
                        android:layout_weight="8"/>
                    <TextView
                        android:textSize="14sp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:textColor="@color/md_black_1000"
                        android:text="80.00"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:weightSum="10"
                    android:padding="5dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="0dp"
                        android:text="VALUES EDUCATION"
                        android:textSize="14sp"
                        android:textColor="@color/md_black_1000"
                        android:layout_height="wrap_content"
                        android:layout_weight="8"/>
                    <TextView
                        android:textSize="14sp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:textColor="@color/md_black_1000"
                        android:text="80.00"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:weightSum="10"
                    android:padding="5dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="0dp"
                        android:text="MATHEMATICS"
                        android:textSize="14sp"
                        android:textColor="@color/md_black_1000"
                        android:layout_height="wrap_content"
                        android:layout_weight="8"/>
                    <TextView
                        android:textSize="14sp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:textColor="@color/md_black_1000"
                        android:text="80.00"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:weightSum="10"
                    android:padding="5dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="0dp"
                        android:text="MAPEH"
                        android:textSize="14sp"
                        android:textColor="@color/md_black_1000"
                        android:layout_height="wrap_content"
                        android:layout_weight="8"/>
                    <TextView
                        android:textSize="14sp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:textColor="@color/md_black_1000"
                        android:text="80.00"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:weightSum="10"
                    android:padding="5dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="0dp"
                        android:text="RELIGION"
                        android:textSize="14sp"
                        android:textColor="@color/md_black_1000"
                        android:layout_height="wrap_content"
                        android:layout_weight="8"/>
                    <TextView
                        android:textSize="14sp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:textColor="@color/md_black_1000"
                        android:text="--.--"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:weightSum="10"
                    android:padding="5dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="0dp"
                        android:text="MAKABAYAN"
                        android:textSize="14sp"
                        android:textColor="@color/md_black_1000"
                        android:layout_height="wrap_content"
                        android:layout_weight="8"/>
                    <TextView
                        android:textSize="14sp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:textColor="@color/md_black_1000"
                        android:text="80.00"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:weightSum="10"
                    android:padding="5dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="0dp"
                        android:text="AVERAGE"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:textColor="@color/md_black_1000"
                        android:layout_height="wrap_content"
                        android:layout_weight="8"/>
                    <TextView
                        android:textSize="14sp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:textStyle="bold"
                        android:textColor="@color/md_black_1000"
                        android:text="80.00"/>

                </LinearLayout>

            </LinearLayout>

            </ScrollView>
        </android.support.v7.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="bottom">
        <TextView
            android:background="@color/md_red_700"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PRINT"
            android:textSize="16dp"
            android:textStyle="bold"
            android:textColor="@color/md_white_1000"
            android:padding="12dp"
            android:gravity="center"
            />

    </LinearLayout>

</FrameLayout>
